<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.namung08.ch3codeyourself.post.mapper.PostMapper">
    <!--SQL-->
    <insert id="save" parameterType="com.namung08.ch3codeyourself.post.model.Post" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO posts(title, body)
        values (#{title}, #{body})
    </insert>
    <select id="findAll" resultType="com.namung08.ch3codeyourself.post.model.Post">
        select *
        from posts;
    </select>
    <select id="findById" parameterType="long" resultType="Post">
        select *
        from posts
        where id = #{id};
    </select>
    <update id="updateById" parameterType="map" >
        update posts
        set
            title = #{post.title},
            body = #{post.body}
        where id = #{id}
    </update>
    <delete id="deleteById" parameterType="long">
        delete from posts
        where id = #{id}
    </delete>
</mapper>
